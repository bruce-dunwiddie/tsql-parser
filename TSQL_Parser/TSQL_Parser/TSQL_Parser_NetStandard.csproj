<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <AssemblyName>TSQL_Parser</AssemblyName>
    <RootNamespace>TSQL_Parser</RootNamespace>
    <Version>1.2.4.0</Version>
    <AssemblyVersion>1.2.4.0</AssemblyVersion>
    <FileVersion>1.2.4.0</FileVersion>
    <Description>Library for Parsing SQL Server TSQL Scripts</Description>
    <Copyright>Copyright Â© 2018</Copyright>
    <Company />
    <RepositoryUrl></RepositoryUrl>
    <PackageProjectUrl>https://github.com/bruce-dunwiddie/tsql-parser</PackageProjectUrl>
    <SignAssembly>true</SignAssembly>
    <AssemblyOriginatorKeyFile>TSQL_Parser.snk</AssemblyOriginatorKeyFile>
    <DelaySign>false</DelaySign>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <OutputPath>bin\Debug\</OutputPath>
    <DocumentationFile>bin\Debug\netstandard2.0\TSQL_Parser.xml</DocumentationFile>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <DocumentationFile>bin\Release\netstandard2.0\TSQL_Parser.xml</DocumentationFile>
    <DebugType>full</DebugType>
    <DebugSymbols>true</DebugSymbols>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Properties\AssemblyInfo.cs" />
    <Compile Remove="Statements\Parsers\TSQLDeleteStatementParser.cs" />
    <Compile Remove="Statements\Parsers\TSQLExecuteStatementParser.cs" />
    <Compile Remove="Statements\Parsers\TSQLInsertStatementParser.cs" />
    <Compile Remove="Statements\Parsers\TSQLMergeStatementParser.cs" />
    <Compile Remove="Statements\Parsers\TSQLUpdateStatementParser.cs" />
    <Compile Remove="Statements\Parsers\TSQLWithStatementParser.cs" />
    <Compile Remove="Statements\TSQLDeleteStatement.cs" />
    <Compile Remove="Statements\TSQLExecuteStatement.cs" />
    <Compile Remove="Statements\TSQLInsertStatement.cs" />
    <Compile Remove="Statements\TSQLMergeStatement.cs" />
    <Compile Remove="Statements\TSQLUpdateStatement.cs" />
    <Compile Remove="Statements\TSQLWithStatement.cs" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="CodeQuality.bat" />
    <None Remove="CoverityScanBuild.bat" />
    <None Remove="Pack.bat" />
    <None Remove="packages.config" />
    <None Remove="project.json" />
    <None Remove="TSQL_Parser.nuspec" />
    <None Remove="TSQL_Parser.xml" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Properties\" />
  </ItemGroup>

</Project>
